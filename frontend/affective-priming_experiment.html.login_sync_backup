    <script type="module">
      // 导入API函数
      import { 
        isAuthenticated, 
        saveExperimentResult, 
        saveExperimentResultToLocal,
        getExperimentStats 
      } from './api.js';
      
      // 将API函数暴露给全局作用域，供后续脚本使用
      window.API = {
        isAuthenticated,
        saveExperimentResult,
        saveExperimentResultToLocal,
        getExperimentStats
      };
    </script>
    <!-- 实验脚本 -->
    <script>
        // 实验配置
        const config = {
            totalTrials: 36, // 总共36轮实验
            // 情绪词分类
            words: {
                positive: [
                    "快乐", "成功", "幸福", "美好", "爱情", "欢乐", 
                    "胜利", "希望", "喜悦", "繁荣", "和谐", "满足"
                ],
                negative: [
                    "悲伤", "失败", "痛苦", "灾难", "恐惧", "愤怒", 
                    "绝望", "仇恨", "死亡", "疾病", "贫困", "战争"
                ],
                neutral: [
                    "桌子", "窗户", "纸张", "椅子", "书本", "手机", 
                    "电脑", "钢笔", "铅笔", "杯子", "盘子", "叉子"
                ],
                // 目标中性词（用于评价）
                targets: [
                    "瓶子", "键盘", "鼠标", "台灯", "日历", "时钟",
                    "书包", "钱包", "钥匙", "眼镜", "帽子", "鞋子",
                    "桌子", "椅子", "窗户", "门", "地板", "墙壁"
                ]
            },
            // 时间配置（毫秒）
            timing: {
                fixationTime: 1500,    // 注视点显示时间
                primeDisplayTime: 50,  // 情绪词显示时间（潜意识水平）
                maskTime: 200,         // 掩码显示时间
                targetTime: 10000,     // 目标词显示和评价时间（超时自动继续）
                feedbackTime: 500      // 反馈显示时间
            },
            // 实验设计：3种启动类型各12次
            trialDistribution: {
                positive: 12,
                negative: 12,
                neutral: 12
            }
        };

        // DOM元素
        const elements = {
            preparation: document.getElementById('preparation-stage'),
            tutorial: document.getElementById('tutorial-stage'),
            experiment: document.getElementById('experiment-stage'),
            result: document.getElementById('result-stage'),
            startTutorial: document.getElementById('start-tutorial'),
            startExperiment: document.getElementById('start-experiment'),
            // 教程元素
            tutorialFixation: document.getElementById('tutorial-fixation'),
            tutorialPrime: document.getElementById('tutorial-prime'),
            tutorialMask: document.getElementById('tutorial-mask'),
            tutorialTarget: document.getElementById('tutorial-target'),
            tutorialRatings: document.getElementById('tutorial-ratings'),
            // 实验元素
            currentTrial: document.getElementById('current-trial'),
            totalTrials: document.getElementById('total-trials'),
            progressBar: document.getElementById('progress-bar'),
            fixationPoint: document.getElementById('fixation-point'),
            primeWord: document.getElementById('prime-word'),
            mask: document.getElementById('mask'),
            targetWord: document.getElementById('target-word'),
            ratingButtons: document.getElementById('rating-buttons'),
            // 结果元素
            positiveMeanRating: document.getElementById('positive-mean-rating'),
            neutralMeanRating: document.getElementById('neutral-mean-rating'),
            negativeMeanRating: document.getElementById('negative-mean-rating'),
            primingIndex: document.getElementById('priming-index'),
            primingIndexBar: document.getElementById('priming-index-bar'),
            resultInterpretation: document.getElementById('result-interpretation'),
            saveResult: document.getElementById('save-result'),
            restartExperiment: document.getElementById('restart-experiment'),
            backToHall: document.getElementById('back-to-hall')
        };

        // 实验数据
        let experimentData = {
            currentTrial: 0,
            trials: [],
            trialSequence: [],
            targetTimeoutTimer: null,
            usedTargets: new Set() // 记录已使用的目标词
        };

        // 绑定事件
        function bindEvents() {
            elements.startTutorial.addEventListener('click', startTutorial);
            elements.startExperiment.addEventListener('click', startExperiment);
            elements.restartExperiment.addEventListener('click', restartExperiment);
            elements.saveResult.addEventListener('click', saveExperimentResult);
            elements.backToHall.addEventListener('click', () => {
                window.location.href = 'psychology_experiments.html';
            });
            
            // 绑定评分按钮事件
            document.querySelectorAll('#rating-buttons .rating-button').forEach(button => {
                button.addEventListener('click', function() {
                    handleRating(parseInt(this.getAttribute('data-rating')));
                });
            });
            
            // 绑定教程评分按钮事件
            document.querySelectorAll('#tutorial-ratings .rating-button').forEach(button => {
                button.addEventListener('click', function() {
                    finishTutorial();
                });
            });
        }

        // 生成实验序列
        function generateTrialSequence() {
            const sequence = [];
            
            // 为每种启动类型创建指定数量的试次
            Object.entries(config.trialDistribution).forEach(([type, count]) => {
                for (let i = 0; i < count; i++) {
                    sequence.push(type);
                }
            });
            
            // 随机打乱序列
            return shuffleArray(sequence);
        }

        // 随机打乱数组
        function shuffleArray(array) {
            const shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        // 获取随机情绪词
        function getRandomWord(type) {
            const words = config.words[type];
            return words[Math.floor(Math.random() * words.length)];
        }

        // 获取随机目标词（避免重复使用）
        function getRandomTarget() {
            // 如果所有目标词都已使用，重置已使用集合
            if (experimentData.usedTargets.size >= config.words.targets.length) {
                experimentData.usedTargets.clear();
            }
            
            let target;
            do {
                target = config.words.targets[Math.floor(Math.random() * config.words.targets.length)];
            } while (experimentData.usedTargets.has(target));
            
            experimentData.usedTargets.add(target);
            return target;
        }

        // 开始教程
        function startTutorial() {
            elements.preparation.classList.add('hidden');
            elements.tutorial.classList.remove('hidden');
            elements.experiment.classList.add('hidden');
            elements.result.classList.add('hidden');
            
            // 运行教程演示
            runTutorial();
        }

        // 运行教程演示
        async function runTutorial() {
            // 显示注视点（教程版：时间延长）
            elements.tutorialFixation.classList.remove('hidden');
            
            // 延迟2秒
            await new Promise(resolve => setTimeout(resolve, 2000));
            
            // 隐藏注视点，显示情绪词（教程版：时间延长）
            elements.tutorialFixation.classList.add('hidden');
            elements.tutorialPrime.textContent = '快乐';
            elements.tutorialPrime.classList.remove('hidden');
            elements.tutorialPrime.classList.add('word-appear');
            
            // 延迟1秒（教程版）
            await new Promise(resolve => setTimeout(resolve, 1000));
            
            // 隐藏情绪词，显示掩码
            elements.tutorialPrime.classList.add('hidden');
            elements.tutorialPrime.classList.remove('word-appear');
            elements.tutorialMask.classList.remove('hidden');
            elements.tutorialMask.classList.add('mask-display');
            
            // 延迟0.5秒
            await new Promise(resolve => setTimeout(resolve, 500));
            
            // 隐藏掩码，显示目标词
            elements.tutorialMask.classList.add('hidden');
            elements.tutorialMask.classList.remove('mask-display');
            elements.tutorialTarget.textContent = '桌子';
            elements.tutorialTarget.classList.remove('hidden');
            elements.tutorialTarget.classList.add('fade-in');
            
            // 延迟1秒，然后显示评分按钮
            await new Promise(resolve => setTimeout(resolve, 1000));
            elements.tutorialRatings.classList.remove('hidden');
        }

        // 完成教程
        function finishTutorial() {
            // 隐藏所有教程元素
            elements.tutorialFixation.classList.add('hidden');
            elements.tutorialPrime.classList.add('hidden');
            elements.tutorialMask.classList.add('hidden');
            elements.tutorialTarget.classList.add('hidden');
            elements.tutorialRatings.classList.add('hidden');
        }

        // 开始实验
        function startExperiment() {
            elements.tutorial.classList.add('hidden');
            elements.experiment.classList.remove('hidden');
            elements.result.classList.add('hidden');
            
            // 重置实验数据
            resetExperimentData();
            
            // 生成实验序列
            experimentData.trialSequence = generateTrialSequence();
            
            // 开始第一轮实验
            startNewTrial();
        }

        // 重置实验数据
        function resetExperimentData() {
            experimentData = {
                currentTrial: 0,
                trials: [],
                trialSequence: [],
                targetTimeoutTimer: null,
                usedTargets: new Set()
            };
            
            // 更新显示
            elements.currentTrial.textContent = '1';
            elements.totalTrials.textContent = config.totalTrials;
            elements.progressBar.style.width = '0%';
        }

        // 开始新的实验轮次
        function startNewTrial() {
            // 增加当前轮次
            experimentData.currentTrial++;
            
            // 更新显示
            elements.currentTrial.textContent = experimentData.currentTrial;
            elements.progressBar.style.width = `${((experimentData.currentTrial - 1) / config.totalTrials) * 100}%`;
            
            // 重置所有显示元素
            elements.primeWord.classList.add('hidden');
            elements.mask.classList.add('hidden');
            elements.targetWord.classList.add('hidden');
            elements.ratingButtons.classList.add('hidden');
            
            // 显示注视点
            elements.fixationPoint.classList.remove('hidden');
            
            // 注视点显示后，显示情绪词
            setTimeout(() => {
                showPrimeWord();
            }, config.timing.fixationTime);
        }

        // 显示情绪词
        function showPrimeWord() {
            // 获取当前试次的启动类型
            const trialType = experimentData.trialSequence[experimentData.currentTrial - 1];
            
            // 获取随机情绪词
            const primeWord = getRandomWord(trialType);
            
            // 设置情绪词样式
            elements.primeWord.textContent = primeWord;
            elements.primeWord.className = `text-4xl font-bold ${getPrimeColor(trialType)}`;
            
            // 隐藏注视点，显示情绪词
            elements.fixationPoint.classList.add('hidden');
            elements.primeWord.classList.remove('hidden');
            elements.primeWord.classList.add('word-appear');
            
            // 情绪词短暂显示后，显示掩码
            setTimeout(() => {
                hidePrimeWord();
            }, config.timing.primeDisplayTime);
        }

        // 获取情绪词颜色
        function getPrimeColor(type) {
            switch(type) {
                case 'positive': return 'text-positive';
                case 'negative': return 'text-negative';
                case 'neutral': return 'text-dark';
                default: return 'text-dark';
            }
        }

        // 隐藏情绪词并显示掩码
        function hidePrimeWord() {
            // 隐藏情绪词
            elements.primeWord.classList.add('hidden');
            elements.primeWord.classList.remove('word-appear');
            
            // 显示掩码
            elements.mask.classList.remove('hidden');
            elements.mask.classList.add('mask-display');
            
            // 掩码显示后，显示目标词
            setTimeout(() => {
                showTargetWord();
            }, config.timing.maskTime);
        }

        // 显示目标词
        function showTargetWord() {
            // 获取随机目标词
            const targetWord = getRandomTarget();
            
            // 隐藏掩码，显示目标词
            elements.mask.classList.add('hidden');
            elements.mask.classList.remove('mask-display');
            elements.targetWord.textContent = targetWord;
            elements.targetWord.classList.remove('hidden');
            elements.targetWord.classList.add('fade-in');
            
            // 短暂延迟后显示评分按钮
            setTimeout(() => {
                elements.ratingButtons.classList.remove('hidden');
                
                // 设置目标词超时
                experimentData.targetTimeoutTimer = setTimeout(() => {
                    handleTimeout();
                }, config.timing.targetTime);
            }, 100);
        }

        // 处理评分
        function handleRating(rating) {
            // 清除超时定时器
            clearTimeout(experimentData.targetTimeoutTimer);
            
            // 获取当前试次信息
            const trialType = experimentData.trialSequence[experimentData.currentTrial - 1];
            const targetWord = elements.targetWord.textContent;
            const reactionTime = Date.now(); // 记录反应时间（从开始显示目标词到点击）
            
            // 记录数据
            experimentData.trials.push({
                trialNumber: experimentData.currentTrial,
                primeType: trialType,
                targetWord: targetWord,
                rating: rating,
                reactionTime: reactionTime,
                timestamp: new Date().toISOString()
            });
            
            // 隐藏评分按钮和目标词
            elements.ratingButtons.classList.add('hidden');
            elements.targetWord.classList.add('hidden');
            elements.targetWord.classList.remove('fade-in');
            
            // 短暂延迟后，检查是否完成所有轮次
            setTimeout(() => {
                if (experimentData.currentTrial >= config.totalTrials) {
                    // 所有轮次完成，显示结果
                    showResults();
                } else {
                    // 准备下一轮
                    startNewTrial();
                }
            }, config.timing.feedbackTime);
        }

        // 处理超时
        function handleTimeout() {
            // 获取当前试次信息
            const trialType = experimentData.trialSequence[experimentData.currentTrial - 1];
            const targetWord = elements.targetWord.textContent;
            
            // 记录数据（超时使用中性评分）
            experimentData.trials.push({
                trialNumber: experimentData.currentTrial,
                primeType: trialType,
                targetWord: targetWord,
                rating: 4, // 中性评分
                isTimeout: true,
                timestamp: new Date().toISOString()
            });
            
            // 隐藏评分按钮和目标词
            elements.ratingButtons.classList.add('hidden');
            elements.targetWord.classList.add('hidden');
            elements.targetWord.classList.remove('fade-in');
            
            // 短暂延迟后，检查是否完成所有轮次
            setTimeout(() => {
                if (experimentData.currentTrial >= config.totalTrials) {
                    // 所有轮次完成，显示结果
                    showResults();
                } else {
                    // 准备下一轮
                    startNewTrial();
                }
            }, config.timing.feedbackTime);
        }

        // 显示结果
        function showResults() {
            // 隐藏实验阶段，显示结果阶段
            elements.experiment.classList.add('hidden');
            elements.result.classList.remove('hidden');
            
            // 计算统计数据
            const stats = calculateStatistics();
            
            // 更新显示
            elements.positiveMeanRating.textContent = stats.positiveMean.toFixed(1);
            elements.neutralMeanRating.textContent = stats.neutralMean.toFixed(1);
            elements.negativeMeanRating.textContent = stats.negativeMean.toFixed(1);
            elements.primingIndex.textContent = `${stats.primingIndex.toFixed(1)}%`;
            elements.primingIndexBar.style.width = `${Math.min(Math.max(stats.primingIndex + 50, 0), 100)}%`;
            
            // 生成结果解读
            generateResultInterpretation(stats);
            
            // 绘制图表
            drawPrimingEffectChart(stats);
            drawRatingDistributionChart(stats);
            
            // 保存到localStorage（即使未登录）
            if (window.API && window.API.saveExperimentResultToLocal) {
                window.API.saveExperimentResultToLocal('affective-priming', {
                    trials: experimentData.trials,
                    statistics: stats,
                    timestamp: new Date().toISOString()
                });
            } else {
                // 降级到本地函数
                saveToLocalStorage({
                    trials: experimentData.trials,
                    statistics: stats,
                    timestamp: new Date().toISOString()
                });
            }
        }

        // 计算统计数据
        function calculateStatistics() {
            const trials = experimentData.trials;
            
            // 按启动类型分组计算平均评分
            const positiveTrials = trials.filter(trial => trial.primeType === 'positive');
            const neutralTrials = trials.filter(trial => trial.primeType === 'neutral');
            const negativeTrials = trials.filter(trial => trial.primeType === 'negative');
            
            // 计算平均值
            const positiveMean = positiveTrials.length > 0 
                ? positiveTrials.reduce((sum, trial) => sum + trial.rating, 0) / positiveTrials.length 
                : 0;
            
            const neutralMean = neutralTrials.length > 0 
                ? neutralTrials.reduce((sum, trial) => sum + trial.rating, 0) / neutralTrials.length 
                : 0;
            
            const negativeMean = negativeTrials.length > 0 
                ? negativeTrials.reduce((sum, trial) => sum + trial.rating, 0) / negativeTrials.length 
                : 0;
            
            // 计算启动效应指数
            // 启动效应指数 = (积极启动平均评分 - 消极启动平均评分) / (积极启动平均评分 + 消极启动平均评分) × 100
            // 为避免除以零，添加一个小的常数
            const primingIndex = ((positiveMean - negativeMean) / (positiveMean + negativeMean + 0.001)) * 100;
            
            // 计算评分分布
            const ratingDistribution = {
                positive: new Array(7).fill(0),
                neutral: new Array(7).fill(0),
                negative: new Array(7).fill(0)
            };
            
            trials.forEach(trial => {
                const ratingIndex = trial.rating - 1; // 转换为0-6的索引
                ratingDistribution[trial.primeType][ratingIndex]++;
            });
            
            return {
                positiveMean,
                neutralMean,
                negativeMean,
                primingIndex,
                ratingDistribution,
                totalTrials: trials.length,
                positiveCount: positiveTrials.length,
                neutralCount: neutralTrials.length,
                negativeCount: negativeTrials.length
            };
        }

        // 生成结果解读
        function generateResultInterpretation(stats) {
            let interpretation = '';
            
            // 基于启动效应指数生成解读
            if (stats.primingIndex > 20) {
                interpretation += '你的情绪启动效应非常强烈！';
                interpretation += ' 即使是在潜意识层面接触到情绪词，也会显著影响你对中性词语的评价。';
                interpretation += ' 这表明你的情绪系统对环境中的情绪信息非常敏感，情绪状态容易受到周围环境的影响。';
            } else if (stats.primingIndex > 10) {
                interpretation += `你的情绪启动效应处于中等水平（指数为${stats.primingIndex.toFixed(1)}%）。`;
                interpretation += ' 潜意识中的情绪刺激对你的评价有一定影响，但这种影响相对可控。';
                interpretation += ' 你在决策时既有情绪的参与，也保持了一定的理性判断能力。';
            } else if (stats.primingIndex > 0) {
                interpretation += `你的情绪启动效应较弱（指数为${stats.primingIndex.toFixed(1)}%）。`;
                interpretation += ' 潜意识中的情绪刺激对你的评价影响较小，你可能是一个比较理性的决策者。';
                interpretation += ' 这种特质在需要客观判断的情境中可能是一种优势。';
            } else {
                interpretation += '你的情绪启动效应很弱，甚至出现了反向效应。';
                interpretation += ' 这可能表明你对情绪信息有较强的抵抗力，或者在实验过程中采用了特定的策略。';
                interpretation += ' 这种特质在需要保持客观、不受情绪干扰的任务中可能很有价值。';
            }
            
            // 添加具体评分差异的分析
            const positiveNeutralDiff = stats.positiveMean - stats.neutralMean;
            const neutralNegativeDiff = stats.neutralMean - stats.negativeMean;
            
            if (positiveNeutralDiff > 0.5 && neutralNegativeDiff > 0.5) {
                interpretation += ' 你对积极启动词和消极启动词的反应都很明显，表现出典型的情绪启动模式。';
            } else if (positiveNeutralDiff > 0.5) {
                interpretation += ' 你对积极情绪词的反应更为敏感，积极情绪似乎更容易影响你的判断。';
            } else if (neutralNegativeDiff > 0.5) {
                interpretation += ' 你对消极情绪词的反应更为敏感，消极情绪可能更容易影响你的评价。';
            }
            
            elements.resultInterpretation.textContent = interpretation;
        }

        // 绘制启动效应对比图
        async function drawPrimingEffectChart(stats) {
            const ctx = document.getElementById('priming-effect-chart').getContext('2d');
            
            // 准备数据
            const labels = ['积极启动', '中性启动', '消极启动'];
            const data = [stats.positiveMean, stats.neutralMean, stats.negativeMean];
            const colors = ['rgba(0, 180, 42, 0.7)', 'rgba(22, 93, 255, 0.7)', 'rgba(245, 63, 63, 0.7)'];
            const borderColors = ['rgba(0, 180, 42, 1)', 'rgba(22, 93, 255, 1)', 'rgba(245, 63, 63, 1)'];
            
            // 获取群体平均数据
            let groupAvgData = [4.8, 4.0, 3.5]; // 默认群体平均值
            
            // 尝试从API获取统计数据
            if (window.API && window.API.getExperimentStats) {
                try {
                    const apiStats = await window.API.getExperimentStats('affective-priming');
                    if (apiStats && apiStats.averageRatings) {
                        groupAvgData = [
                            apiStats.averageRatings.positive || 4.8,
                            apiStats.averageRatings.neutral || 4.0,
                            apiStats.averageRatings.negative || 3.5
                        ];
                    }
                } catch (error) {
                    console.error('获取统计数据失败，使用默认值:', error);
                }
            }
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: '你的平均评分',
                            data: data,
                            backgroundColor: colors,
                            borderColor: borderColors,
                            borderWidth: 1
                        },
                        {
                            label: '群体平均评分',
                            data: groupAvgData,
                            backgroundColor: 'rgba(134, 144, 156, 0.3)',
                            borderColor: 'rgba(134, 144, 156, 0.8)',
                            borderWidth: 1,
                            borderDash: [5, 5]
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 7,
                            title: {
                                display: true,
                                text: '平均愉悦度评分 (1-7)'
                            },
                            ticks: {
                                stepSize: 1
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.parsed.y.toFixed(1);
                                }
                            }
                        }
                    }
                }
            });
        }

        // 绘制评分分布图
        function drawRatingDistributionChart(stats) {
            const ctx = document.getElementById('rating-distribution-chart').getContext('2d');
            
            // 准备数据
            const labels = ['1', '2', '3', '4', '5', '6', '7'];
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: '积极启动后评分',
                            data: stats.ratingDistribution.positive,
                            borderColor: 'rgba(0, 180, 42, 1)',
                            backgroundColor: 'rgba(0, 180, 42, 0.1)',
                            tension: 0.1,
                            fill: true
                        },
                        {
                            label: '中性启动后评分',
                            data: stats.ratingDistribution.neutral,
                            borderColor: 'rgba(22, 93, 255, 1)',
                            backgroundColor: 'rgba(22, 93, 255, 0.1)',
                            tension: 0.1,
                            fill: true
                        },
                        {
                            label: '消极启动后评分',
                            data: stats.ratingDistribution.negative,
                            borderColor: 'rgba(245, 63, 63, 1)',
                            backgroundColor: 'rgba(245, 63, 63, 0.1)',
                            tension: 0.1,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '次数'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: '评分'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    }
                }
            });
        }

        // 保存到localStorage（降级方案）
        function saveToLocalStorage(results) {
            try {
                // 获取现有记录
                let experimentRecords = JSON.parse(localStorage.getItem('experimentRecords') || '[]');
                
                // 添加新记录
                experimentRecords.push({
                    type: 'affective-priming',
                    results: results,
                    timestamp: new Date().toISOString()
                });
                
                // 只保留最近20条记录
                if (experimentRecords.length > 20) {
                    experimentRecords = experimentRecords.slice(-20);
                }
                
                // 保存回localStorage
                localStorage.setItem('experimentRecords', JSON.stringify(experimentRecords));
            } catch (error) {
                console.error('保存实验结果到localStorage失败:', error);
            }
        }

        // 保存实验结果到服务器
        async function saveExperimentResult() {
            // 检查用户是否登录
            if (window.API && window.API.isAuthenticated) {
                if (!window.API.isAuthenticated()) {
                    // 显示登录提示
                    if (confirm('登录后可保存实验记录，是否立即登录？')) {
                        window.location.href = 'login.html';
                    }
                    return;
                }
            } else {
                // 降级检查
                const token = localStorage.getItem('token');
                if (!token) {
                    if (confirm('登录后可保存实验记录，是否立即登录？')) {
                        window.location.href = 'login.html';
                    }
                    return;
                }
            }
            
            // 获取最新的结果（从localStorage）
            try {
                let experimentRecords = JSON.parse(localStorage.getItem('experimentRecords') || '[]');
                const latestResult = experimentRecords
                    .filter(record => record.type === 'affective-priming')
                    .pop();
                
                if (latestResult && window.API && window.API.saveExperimentResult) {
                    // 调用API保存结果
                    await window.API.saveExperimentResult('affective-priming', latestResult.results);
                    
                    // 显示成功提示
                    alert('实验结果保存成功！');
                    
                    // 禁用保存按钮
                    elements.saveResult.disabled = true;
                    elements.saveResult.classList.add('opacity-50');
                    elements.saveResult.textContent = '已保存';
                } else {
                    alert('保存失败，请稍后重试');
                }
            } catch (error) {
                console.error('保存实验结果失败:', error);
                alert('保存失败，请稍后重试');
            }
        }

        // 重新开始实验
        function restartExperiment() {
            // 重置实验数据
            resetExperimentData();
            
            // 隐藏结果阶段，显示实验阶段
            elements.result.classList.add('hidden');
            elements.experiment.classList.remove('hidden');
            
            // 重新启用保存按钮
            elements.saveResult.disabled = false;
            elements.saveResult.classList.remove('opacity-50');
            elements.saveResult.textContent = '保存结果';
            
            // 生成新的实验序列
            experimentData.trialSequence = generateTrialSequence();
            
            // 开始新一轮实验
            startNewTrial();
        }

        // 初始化
        function init() {
            bindEvents();
            
            // 加载导航栏和页脚
            if (typeof loadNavbar === 'function') {
                loadNavbar();
            }
            if (typeof loadFooter === 'function') {
                loadFooter();
            }
        }

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', init);
    </script>
