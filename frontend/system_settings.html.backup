    <!-- 统一的管理系统JavaScript -->
    <script>
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            // 处理移动端菜单切换
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const closeMobileMenuButton = document.getElementById('close-mobile-menu');
            const mobileSidebar = document.querySelector('aside.fixed');
            
            if (mobileMenuButton && closeMobileMenuButton && mobileSidebar) {
                mobileMenuButton.addEventListener('click', function() {
                    mobileSidebar.classList.remove('hidden');
                });
                
                closeMobileMenuButton.addEventListener('click', function() {
                    mobileSidebar.classList.add('hidden');
                });
            }
            
            // 退出登录处理
            const logoutButtons = document.querySelectorAll('#logout-button, #mobile-logout-button');
            logoutButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // 这里应该有退出登录的逻辑
                    alert('已退出登录');
                    window.location.href = 'login.html';
                });
            });
            
            // 高亮当前页面在侧边栏中的链接
            const currentPath = window.location.pathname.split('/').pop();
            const sidebarLinks = document.querySelectorAll('.admin-sidebar-item');
            
            sidebarLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && href === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>
