    <!-- 引入公共脚本 -->
    <script src="common.js"></script>
    <!-- 引入API模块 -->
    <script type="module">
      // 导入API函数
      import { 
        isAuthenticated, 
        saveExperimentResult, 
        saveExperimentResultToLocal,
        getExperimentStats 
      } from './api.js';
      
      // 将API函数暴露给全局作用域，供后续脚本使用
      window.API = {
        isAuthenticated,
        saveExperimentResult,
        saveExperimentResultToLocal,
        getExperimentStats
      };
    </script>
    <!-- 实验脚本 -->
    <script>
        // DOM元素
        const elements = {
            preparation: document.getElementById('preparation-stage'),
            tutorial: document.getElementById('tutorial-stage'),
            experiment: document.getElementById('experiment-stage'),
            result: document.getElementById('result-stage'),
            startTutorial: document.getElementById('start-tutorial'),
            startExperiment: document.getElementById('start-experiment'),
            shapeContainer: document.getElementById('shape-container'),
            fixationPoint: document.getElementById('fixation-point'),
            countdown: document.getElementById('countdown'),
            yesButton: document.getElementById('yes-button'),
            noButton: document.getElementById('no-button'),
            currentTrial: document.getElementById('current-trial'),
            totalTrials: document.getElementById('total-trials'),
            progressBar: document.getElementById('progress-bar'),
            reactionTimeDisplay: document.getElementById('reaction-time-display'),
            reactionTime: document.getElementById('reaction-time'),
            feedbackMessage: document.getElementById('feedback-message'),
            avgReactionTime: document.getElementById('avg-reaction-time'),
            totalAccuracy: document.getElementById('total-accuracy'),
            searchSlope: document.getElementById('search-slope'),
            resultInterpretation: document.getElementById('result-interpretation'),
            saveResult: document.getElementById('save-result'),
            restartExperiment: document.getElementById('restart-experiment'),
            backToHall: document.getElementById('back-to-hall')
        };

        // 实验配置
        const config = {
            totalTrials: 20,
            fixationTime: 1000, // 毫秒
            countdownTime: 1000, // 毫秒
            shapeSizes: [40, 50, 60], // 形状大小范围
            setSizes: [4, 8, 12, 16, 20], // 干扰项数量设置
            shapeDisplayTime: 3000, // 毫秒，超时自动进入下一轮
            colors: ['#F53F3F', '#165DFF'], // 红色和蓝色
            shapes: ['circle', 'square'] // 圆形和方形
        };

        // 实验数据
        let experimentData = {
            currentTrial: 0,
            trials: [],
            trialStartTime: null,
            targetPresent: false,
            timeoutTimer: null
        };

        // 绑定事件
        function bindEvents() {
            elements.startTutorial.addEventListener('click', startTutorial);
            elements.startExperiment.addEventListener('click', startExperiment);
            elements.yesButton.addEventListener('click', () => handleResponse(true));
            elements.noButton.addEventListener('click', () => handleResponse(false));
            elements.restartExperiment.addEventListener('click', restartExperiment);
            elements.saveResult.addEventListener('click', saveExperimentResult);
            elements.backToHall.addEventListener('click', () => {
                window.location.href = 'psychology_experiments.html';
            });
        }

        // 开始教程
        function startTutorial() {
            // 隐藏准备阶段，显示教程阶段
            elements.preparation.classList.add('hidden');
            elements.tutorial.classList.remove('hidden');
            elements.experiment.classList.add('hidden');
            elements.result.classList.add('hidden');
        }

        // 开始实验
        function startExperiment() {
            // 隐藏教程阶段，显示实验阶段
            elements.tutorial.classList.add('hidden');
            elements.experiment.classList.remove('hidden');
            elements.result.classList.add('hidden');
            
            // 重置实验数据
            resetExperimentData();
            
            // 开始第一轮实验
            startNewTrial();
        }

        // 重置实验数据
        function resetExperimentData() {
            experimentData = {
                currentTrial: 0,
                trials: [],
                trialStartTime: null,
                targetPresent: false,
                timeoutTimer: null
            };
            
            // 更新显示
            elements.currentTrial.textContent = '1';
            elements.totalTrials.textContent = config.totalTrials;
            elements.progressBar.style.width = '0%';
        }

        // 开始新的实验轮次
        function startNewTrial() {
            // 增加当前轮次
            experimentData.currentTrial++;
            
            // 更新显示
            elements.currentTrial.textContent = experimentData.currentTrial;
            elements.progressBar.style.width = `${((experimentData.currentTrial - 1) / config.totalTrials) * 100}%`;
            
            // 隐藏反馈
            elements.reactionTimeDisplay.classList.add('hidden');
            elements.feedbackMessage.classList.add('hidden');
            
            // 清空形状容器
            clearShapeContainer();
            
            // 显示注视点
            elements.fixationPoint.classList.remove('hidden');
            
            // 禁用反应按钮
            elements.yesButton.disabled = true;
            elements.noButton.disabled = true;
            
            // 注视点显示后，显示倒计时
            setTimeout(() => {
                elements.fixationPoint.classList.add('hidden');
                showCountdown();
            }, config.fixationTime);
        }

        // 清空形状容器
        function clearShapeContainer() {
            // 保留注视点和倒计时元素
            const elementsToKeep = [elements.fixationPoint, elements.countdown];
            
            // 移除其他所有子元素
            Array.from(elements.shapeContainer.children).forEach(child => {
                if (!elementsToKeep.includes(child)) {
                    elements.shapeContainer.removeChild(child);
                }
            });
        }

        // 显示倒计时
        function showCountdown() {
            elements.countdown.textContent = '3';
            elements.countdown.classList.remove('hidden');
            elements.countdown.classList.add('countdown-animation');
            
            setTimeout(() => {
                elements.countdown.textContent = '2';
                elements.countdown.classList.remove('countdown-animation');
                // 触发重绘
                void elements.countdown.offsetWidth;
                elements.countdown.classList.add('countdown-animation');
                
                setTimeout(() => {
                    elements.countdown.textContent = '1';
                    elements.countdown.classList.remove('countdown-animation');
                    // 触发重绘
                    void elements.countdown.offsetWidth;
                    elements.countdown.classList.add('countdown-animation');
                    
                    setTimeout(() => {
                        elements.countdown.classList.add('hidden');
                        elements.countdown.classList.remove('countdown-animation');
                        displayShapes();
                    }, config.countdownTime);
                }, config.countdownTime);
            }, config.countdownTime);
        }

        // 显示形状
        function displayShapes() {
            // 随机选择形状数量（从配置的集合中）
            const setSize = config.setSizes[Math.floor(Math.random() * config.setSizes.length)];
            
            // 随机决定是否包含目标（红色圆形），概率约50%
            experimentData.targetPresent = Math.random() > 0.5;
            
            // 记录开始时间
            experimentData.trialStartTime = Date.now();
            
            // 生成形状
            generateShapes(setSize, experimentData.targetPresent);
            
            // 启用反应按钮
            elements.yesButton.disabled = false;
            elements.noButton.disabled = false;
            
            // 设置超时定时器
            experimentData.timeoutTimer = setTimeout(() => {
                handleTimeout();
            }, config.shapeDisplayTime);
        }

        // 生成形状
        function generateShapes(count, hasTarget) {
            const container = elements.shapeContainer;
            const containerWidth = container.clientWidth;
            const containerHeight = container.clientHeight;
            
            // 确保有足够的空间，减去形状大小和边距
            const minX = 70;
            const maxX = containerWidth - 70;
            const minY = 70;
            const maxY = containerHeight - 70;
            
            // 已使用的位置，避免重叠
            const usedPositions = [];
            const minDistance = 80; // 最小距离
            
            // 如果有目标，先生成目标
            if (hasTarget) {
                const targetShape = createShape('circle', '#F53F3F'); // 红色圆形
                placeShapeRandomly(targetShape, minX, maxX, minY, maxY, usedPositions, minDistance);
                container.appendChild(targetShape);
            }
            
            // 生成剩余的干扰形状
            for (let i = hasTarget ? 1 : 0; i < count; i++) {
                // 随机选择形状和颜色，但避免生成目标（红色圆形）
                let shape, color;
                do {
                    shape = config.shapes[Math.floor(Math.random() * config.shapes.length)];
                    color = config.colors[Math.floor(Math.random() * config.colors.length)];
                } while (shape === 'circle' && color === '#F53F3F'); // 避免生成目标
                
                const newShape = createShape(shape, color);
                placeShapeRandomly(newShape, minX, maxX, minY, maxY, usedPositions, minDistance);
                container.appendChild(newShape);
            }
        }

        // 创建形状元素
        function createShape(shapeType, color) {
            const shape = document.createElement('div');
            shape.className = 'search-shape';
            
            // 随机选择形状大小
            const size = config.shapeSizes[Math.floor(Math.random() * config.shapeSizes.length)];
            
            // 设置样式
            shape.style.width = `${size}px`;
            shape.style.height = `${size}px`;
            shape.style.backgroundColor = color;
            
            // 设置形状类型
            if (shapeType === 'circle') {
                shape.style.borderRadius = '50%';
            } else {
                shape.style.borderRadius = '4px';
            }
            
            return shape;
        }

        // 随机放置形状，避免重叠
        function placeShapeRandomly(shape, minX, maxX, minY, maxY, usedPositions, minDistance) {
            let attempts = 0;
            const maxAttempts = 50; // 最大尝试次数
            
            while (attempts < maxAttempts) {
                attempts++;
                
                // 生成随机位置
                const shapeWidth = parseInt(shape.style.width);
                const shapeHeight = parseInt(shape.style.height);
                
                const x = Math.floor(Math.random() * (maxX - minX - shapeWidth)) + minX;
                const y = Math.floor(Math.random() * (maxY - minY - shapeHeight)) + minY;
                
                // 检查是否与已有形状重叠
                let overlap = false;
                for (const pos of usedPositions) {
                    const distance = Math.sqrt(Math.pow(x - pos.x, 2) + Math.pow(y - pos.y, 2));
                    if (distance < minDistance) {
                        overlap = true;
                        break;
                    }
                }
                
                if (!overlap) {
                    // 找到合适位置，设置形状位置
                    shape.style.left = `${x}px`;
                    shape.style.top = `${y}px`;
                    
                    // 记录已使用位置
                    usedPositions.push({x, y});
                    break;
                }
            }
        }

        // 处理用户响应
        function handleResponse(userResponse) {
            // 清除超时定时器
            clearTimeout(experimentData.timeoutTimer);
            
            // 计算反应时间
            const reactionTime = Date.now() - experimentData.trialStartTime;
            
            // 判断是否正确
            const isCorrect = userResponse === experimentData.targetPresent;
            
            // 记录数据
            experimentData.trials.push({
                trialNumber: experimentData.currentTrial,
                hasTarget: experimentData.targetPresent,
                userResponse: userResponse,
                reactionTime: reactionTime,
                isCorrect: isCorrect,
                timestamp: new Date().toISOString()
            });
            
            // 禁用反应按钮
            elements.yesButton.disabled = true;
            elements.noButton.disabled = true;
            
            // 显示反应时间和反馈
            showFeedback(reactionTime, isCorrect);
            
            // 检查是否完成所有轮次
            if (experimentData.currentTrial >= config.totalTrials) {
                // 所有轮次完成，显示结果
                setTimeout(() => {
                    showResults();
                }, 1500);
            } else {
                // 准备下一轮
                setTimeout(() => {
                    startNewTrial();
                }, 1500);
            }
        }

        // 处理超时
        function handleTimeout() {
            // 记录数据（超时视为错误）
            experimentData.trials.push({
                trialNumber: experimentData.currentTrial,
                hasTarget: experimentData.targetPresent,
                userResponse: null,
                reactionTime: config.shapeDisplayTime,
                isCorrect: false,
                isTimeout: true,
                timestamp: new Date().toISOString()
            });
            
            // 显示超时反馈
            elements.feedbackMessage.textContent = '超时！请更快地做出反应';
            elements.feedbackMessage.className = 'text-center font-bold text-danger feedback-animation';
            elements.feedbackMessage.classList.remove('hidden');
            
            // 禁用反应按钮
            elements.yesButton.disabled = true;
            elements.noButton.disabled = true;
            
            // 检查是否完成所有轮次
            if (experimentData.currentTrial >= config.totalTrials) {
                // 所有轮次完成，显示结果
                setTimeout(() => {
                    showResults();
                }, 1500);
            } else {
                // 准备下一轮
                setTimeout(() => {
                    startNewTrial();
                }, 1500);
            }
        }

        // 显示反馈
        function showFeedback(reactionTime, isCorrect) {
            // 显示反应时间
            elements.reactionTime.textContent = reactionTime;
            elements.reactionTimeDisplay.classList.remove('hidden');
            
            // 显示正确性反馈
            elements.feedbackMessage.textContent = isCorrect ? '正确！' : '错误！';
            elements.feedbackMessage.className = `text-center font-bold feedback-animation ${isCorrect ? 'text-secondary' : 'text-danger'}`;
            elements.feedbackMessage.classList.remove('hidden');
        }

        // 显示结果
        function showResults() {
            // 隐藏实验阶段，显示结果阶段
            elements.experiment.classList.add('hidden');
            elements.result.classList.remove('hidden');
            
            // 计算统计数据
            const stats = calculateStatistics();
            
            // 更新显示
            elements.avgReactionTime.textContent = `${stats.avgReactionTime} ms`;
            elements.totalAccuracy.textContent = `${stats.accuracy}%`;
            elements.searchSlope.textContent = `${stats.searchSlope.toFixed(2)} ms/项`;
            
            // 生成结果解读
            generateResultInterpretation(stats);
            
            // 绘制图表
            drawReactionTimeChart(stats);
            drawAccuracyChart(stats);
            
            // 保存到localStorage（即使未登录）
            if (window.API && window.API.saveExperimentResultToLocal) {
                window.API.saveExperimentResultToLocal('visual-search', {
                    trials: experimentData.trials,
                    statistics: stats,
                    timestamp: new Date().toISOString()
                });
            } else {
                // 降级到本地函数
                saveToLocalStorage({
                    trials: experimentData.trials,
                    statistics: stats,
                    timestamp: new Date().toISOString()
                });
            }
        }

        // 计算统计数据
        function calculateStatistics() {
            const trials = experimentData.trials;
            
            // 过滤掉超时的尝试
            const validTrials = trials.filter(trial => !trial.isTimeout);
            
            // 计算平均反应时间
            const totalReactionTime = validTrials.reduce((sum, trial) => sum + trial.reactionTime, 0);
            const avgReactionTime = validTrials.length > 0 ? Math.round(totalReactionTime / validTrials.length) : 0;
            
            // 计算正确率
            const correctCount = trials.filter(trial => trial.isCorrect).length;
            const accuracy = Math.round((correctCount / trials.length) * 100);
            
            // 计算搜索斜率（简单估算：有目标和无目标条件下的反应时差）
            const targetPresentTrials = validTrials.filter(trial => trial.hasTarget);
            const targetAbsentTrials = validTrials.filter(trial => !trial.hasTarget);
            
            const targetPresentRT = targetPresentTrials.length > 0 
                ? targetPresentTrials.reduce((sum, trial) => sum + trial.reactionTime, 0) / targetPresentTrials.length 
                : 0;
                
            const targetAbsentRT = targetAbsentTrials.length > 0 
                ? targetAbsentTrials.reduce((sum, trial) => sum + trial.reactionTime, 0) / targetAbsentTrials.length 
                : 0;
                
            // 搜索斜率 = (无目标反应时 - 有目标反应时) / 平均项目数
            const avgSetSize = config.setSizes.reduce((sum, size) => sum + size, 0) / config.setSizes.length;
            const searchSlope = Math.abs(targetAbsentRT - targetPresentRT) / avgSetSize;
            
            return {
                avgReactionTime,
                accuracy,
                searchSlope,
                correctCount,
                totalTrials: trials.length,
                validTrials: validTrials.length,
                targetPresentRT,
                targetAbsentRT
            };
        }

        // 生成结果解读
        function generateResultInterpretation(stats) {
            let interpretation = '';
            
            // 基于搜索斜率和反应时间生成解读
            if (stats.searchSlope < 10) {
                // 平行搜索模式
                interpretation += '你的视觉搜索表现符合"平行搜索"模式，搜索斜率较低。';
                interpretation += ' 这意味着你能快速识别目标特征，即使在干扰项较多的情况下，反应时间增加也不明显。';
                interpretation += ' 这种模式通常在目标具有独特特征（如红色圆形）时出现，表明你能够有效利用前注意加工阶段的特征检测机制。';
            } else {
                // 序列搜索模式
                interpretation += '你的视觉搜索表现符合"序列搜索"模式，搜索斜率较高。';
                interpretation += ` 你的平均反应时为${stats.avgReactionTime}毫秒，随干扰项数量增加而显著延长。`;
                interpretation += ' 这种模式表明你可能需要逐个检查每个项目，需要更多的注意力资源。';
            }
            
            // 添加正确率分析
            if (stats.accuracy >= 90) {
                interpretation += ' 你的正确率非常高（90%以上），表明你在快速反应的同时保持了很好的准确性。';
            } else if (stats.accuracy >= 75) {
                interpretation += ` 你的正确率为${stats.accuracy}%，处于良好水平，在速度和准确性之间取得了较好的平衡。`;
            } else {
                interpretation += ` 你的正确率为${stats.accuracy}%，可能需要在保持速度的同时更加注重准确性。`;
            }
            
            elements.resultInterpretation.textContent = interpretation;
        }

        // 绘制反应时图表
        async function drawReactionTimeChart(stats) {
            const ctx = document.getElementById('reaction-time-chart').getContext('2d');
            
            // 准备数据
            const targetPresentTrials = experimentData.trials.filter(trial => trial.hasTarget && !trial.isTimeout);
            const targetAbsentTrials = experimentData.trials.filter(trial => !trial.hasTarget && !trial.isTimeout);
            
            // 获取群体平均数据
            let groupStats = {
                avgTargetPresentRT: 500,
                avgTargetAbsentRT: 700
            };
            
            // 尝试从API获取统计数据
            if (window.API && window.API.getExperimentStats) {
                try {
                    const apiStats = await window.API.getExperimentStats('visual-search');
                    if (apiStats) {
                        groupStats = apiStats;
                    }
                } catch (error) {
                    console.error('获取统计数据失败，使用默认值:', error);
                }
            }
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['有目标', '无目标'],
                    datasets: [
                        {
                            label: '你的反应时',
                            data: [
                                Math.round(stats.targetPresentRT),
                                Math.round(stats.targetAbsentRT)
                            ],
                            backgroundColor: 'rgba(22, 93, 255, 0.7)',
                            borderColor: 'rgba(22, 93, 255, 1)',
                            borderWidth: 1
                        },
                        {
                            label: '群体平均',
                            data: [
                                groupStats.avgTargetPresentRT,
                                groupStats.avgTargetAbsentRT
                            ],
                            backgroundColor: 'rgba(134, 144, 156, 0.7)',
                            borderColor: 'rgba(134, 144, 156, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: '反应时 (毫秒)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + ' ms';
                                }
                            }
                        }
                    }
                }
            });
        }

        // 绘制正确率图表
        function drawAccuracyChart(stats) {
            const ctx = document.getElementById('accuracy-chart').getContext('2d');
            
            // 计算每个轮次的累积正确率
            const cumulativeAccuracy = [];
            let correctSoFar = 0;
            
            experimentData.trials.forEach((trial, index) => {
                if (trial.isCorrect) correctSoFar++;
                cumulativeAccuracy.push(Math.round((correctSoFar / (index + 1)) * 100));
            });
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array.from({length: experimentData.trials.length}, (_, i) => i + 1),
                    datasets: [
                        {
                            label: '累积正确率',
                            data: cumulativeAccuracy,
                            borderColor: 'rgba(0, 180, 42, 1)',
                            backgroundColor: 'rgba(0, 180, 42, 0.1)',
                            borderWidth: 2,
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: '正确率 (%)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: '试次'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        }

        // 保存到localStorage（降级方案）
        function saveToLocalStorage(results) {
            try {
                // 获取现有记录
                let experimentRecords = JSON.parse(localStorage.getItem('experimentRecords') || '[]');
                
                // 添加新记录
                experimentRecords.push({
                    type: 'visual-search',
                    results: results,
                    timestamp: new Date().toISOString()
                });
                
                // 只保留最近20条记录
                if (experimentRecords.length > 20) {
                    experimentRecords = experimentRecords.slice(-20);
                }
                
                // 保存回localStorage
                localStorage.setItem('experimentRecords', JSON.stringify(experimentRecords));
            } catch (error) {
                console.error('保存实验结果到localStorage失败:', error);
            }
        }

        // 保存实验结果到服务器
        async function saveExperimentResult() {
            // 检查用户是否登录
            if (window.API && window.API.isAuthenticated) {
                if (!window.API.isAuthenticated()) {
                    // 显示登录提示
                    if (confirm('登录后可保存实验记录，是否立即登录？')) {
                        window.location.href = 'login.html';
                    }
                    return;
                }
            } else {
                // 降级检查
                const token = localStorage.getItem('token');
                if (!token) {
                    if (confirm('登录后可保存实验记录，是否立即登录？')) {
                        window.location.href = 'login.html';
                    }
                    return;
                }
            }
            
            // 获取最新的结果（从localStorage）
            try {
                let experimentRecords = JSON.parse(localStorage.getItem('experimentRecords') || '[]');
                const latestResult = experimentRecords
                    .filter(record => record.type === 'visual-search')
                    .pop();
                
                if (latestResult && window.API && window.API.saveExperimentResult) {
                    // 调用API保存结果
                    await window.API.saveExperimentResult('visual-search', latestResult.results);
                    
                    // 显示成功提示
                    alert('实验结果保存成功！');
                    
                    // 禁用保存按钮
                    elements.saveResult.disabled = true;
                    elements.saveResult.classList.add('opacity-50');
                    elements.saveResult.textContent = '已保存';
                } else {
                    alert('保存失败，请稍后重试');
                }
            } catch (error) {
                console.error('保存实验结果失败:', error);
                alert('保存失败，请稍后重试');
            }
        }

        // 重新开始实验
        function restartExperiment() {
            // 重置实验数据
            resetExperimentData();
            
            // 隐藏结果阶段，显示实验阶段
            elements.result.classList.add('hidden');
            elements.experiment.classList.remove('hidden');
            
            // 重新启用保存按钮
            elements.saveResult.disabled = false;
            elements.saveResult.classList.remove('opacity-50');
            elements.saveResult.textContent = '保存结果';
            
            // 开始新一轮实验
            startNewTrial();
        }

        // 初始化
        function init() {
            bindEvents();
            
            // 加载导航栏和页脚
            if (typeof loadNavbar === 'function') {
                loadNavbar();
            }
            if (typeof loadFooter === 'function') {
                loadFooter();
            }
        }

        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', init);
    </script>
<script src="update_experiment_navigation.js"></script>
    </body>
</html>